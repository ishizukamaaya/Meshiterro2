<table class = "table">
  <h2 class = "text-title text-center my-3">フォロー中</h2>
  <% if @users.exists? %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to "詳細", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>

<% else %>
  <p class = "text-center my-5">ユーザーはいません</p>
<% end %>
</table>

