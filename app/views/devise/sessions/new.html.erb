<div class = "container">
  <div class = "row no-gutters">
    <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class = "text-dark bg-light p-4 mb-0">ログイン</h2>
      <div class = "form-body p-4">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class = "input-group mb-3 mt-4">
            <div class = "input-group-prepend">
              <span class = "input-group-text" aria-hidden="true">メールアドレス</span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class = "input-group mb-3 mt-4">
            <div class = "input-group-prepend">
              <span class = "input-group-text" aria-hidden="true">パスワード</span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <hr>
          <%= f.submit "ログイン", class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <div class = "m-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>