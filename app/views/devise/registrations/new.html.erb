<div class = "container">
  <div class = "row no-gutters">
    <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class = "text-dark bg-light p-4 mb-0">新規登録</h2>
      <div class = "form-body p-4">

       <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class = "input-group mb-3 mt-4">
          <div class = "input-group-prepend">
            <span class = "input-group-text" aria-hidden="true">名前</span>
          </div>
          <%= f.text_field :name,autofocus: true %>
        </div>
        <div class = "input-group mb-3 mt-4">
          <div class = "input-group-prepend">
            <span class = "input-group-text" aria-hidden="true">メールアドレス</span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class = "input-group mb-3 mt-4">
          <div class = "input-group-prepend">
            <span class = "input-group-text" aria-hidden="true">パスワード</span>
          </div>
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
        </div>
        <div class = "input-group mb-3 mt-4">
          <div class = "input-group-prepend">
            <span class = "input-group-text" aria-hidden="true">確認用パス</span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <hr>
        <%= f.submit "登録", class: "btn btn-lg btn-block btn-info mt-4" %>
        <div class="actions m-3">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

     </div>
    </div>
  </div>
</div>